# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/assetlifecycle

# Generic Database URL (for key synchronization script)
# This is the source database that has the correct primary key and foreign key relationships
GENERIC_URL=postgresql://username:password@localhost:5432/generic_database

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:5173

# Backend URL (for internal API calls)
BACKEND_URL=http://localhost:5000

# API Base URL
API_BASE_URL=http://localhost:5000/api

# Email Configuration (for password reset)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Cron Service Token (optional)
CRON_API_TOKEN=your_cron_token_here

# Production Settings (uncomment and update for production)
# NODE_ENV=production
# FRONTEND_URL=https://your-domain.com
# BACKEND_URL=https://your-domain.com
# API_BASE_URL=https://your-domain.com/api

# MinIO configuration
MINIO_END_POINT=127.0.0.1
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=asset-docs

# Firebase Cloud Messaging (FCM) Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id

# ============================================
# Database Backup Configuration
# ============================================
# Development (local storage in project directory)
BACKUP_DIR=./backups/postgresql
BACKUP_LOG_DIR=./logs/postgresql-backups

# Production (store on remote server)
# BACKUP_DIR=/var/backups/postgresql
# BACKUP_LOG_DIR=/var/log/postgresql-backups

BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPT=false

# Storage Options
BACKUP_LOCAL=true                    # Keep local backups (development)
# BACKUP_LOCAL=false                 # Don't keep local backups (production)

# Remote Backup Server (for production)
BACKUP_REMOTE=false                  # Development: disabled
# BACKUP_REMOTE=true                # Production: enable remote backup
# BACKUP_REMOTE_HOST=backup-server-ip-or-domain
# BACKUP_REMOTE_USER=backupuser
# BACKUP_REMOTE_PATH=/backups/postgresql
# BACKUP_REMOTE_SSH_KEY=/home/username/.ssh/backup_key

# S3/MinIO Storage (optional)
BACKUP_S3=false
BACKUP_MINIO=false
# BACKUP_S3_BUCKET=database-backups

# Email Notifications (optional)
BACKUP_EMAIL_NOTIFY=false
# BACKUP_EMAIL_TO=admin@yourdomain.com
# BACKUP_EMAIL_FROM=noreply@yourdomain.com

# Logging
BACKUP_VERBOSE=true